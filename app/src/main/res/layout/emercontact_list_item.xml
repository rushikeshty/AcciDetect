<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_margin="5dp"
    card_view:cardCornerRadius="0dp"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30sp"
        android:background="@drawable/customshape"
        android:id="@+id/relativeLayout"
        android:paddingTop="15sp"
        android:paddingBottom="10sp"
        android:paddingRight="30sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cont_name"
            android:textColor="#003366"
            android:text="Name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cont_number"
            android:textColor="#003366"
            android:text="Mobile number"
            android:layout_below="@+id/cont_name"
            android:layout_marginTop="3sp"/>

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_below="@+id/cont_number"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="10sp"
            android:background="#DC656DFB"
            android:gravity="center_vertical|center_horizontal"
            android:text="Edit"
            android:textColor="#1E0D01"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_below="@+id/cont_number"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="-25dp"
            android:background="#DC656DFB"
            android:gravity="center_vertical|center_horizontal"
            android:text="  Delete"
            android:textColor="#1E0D01"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="14sp"
            android:layout_height="14sp"
            android:layout_alignLeft="@+id/btn_edit"
            android:layout_alignTop="@+id/btn_edit"
            android:layout_marginLeft="35sp"
            android:background="#F4E4E4"
            android:layout_marginTop="12dp"
            android:src="@drawable/orange_edit" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="14sp"
            android:layout_height="14sp"
            android:layout_alignStart="@+id/btn_delete"
            android:layout_alignLeft="@+id/btn_delete"
            android:layout_alignTop="@+id/imageView7"
            android:layout_marginStart="28dp"
            android:background="@color/main_orange"
            android:layout_marginLeft="31dp"
            android:src="@drawable/orange_delete" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>