<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#003366"
    tools:context=".LoginSignup.LoginScreenActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="Login"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#EDFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        android:layout_width="300sp"
        android:layout_height="1px"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65sp"
        android:background="#495669" />
    <View
        android:layout_width="300sp"
        android:layout_height="1px"
        android:background="#495669"
        android:id="@+id/view2"
        android:layout_below="@+id/view1"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignStart="@+id/view1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="300sp"
        android:layout_height="1px"
        android:background="#495669"
        android:layout_marginTop="50dp"
        android:id="@+id/view3"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:layout_alignStart="@+id/view1"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignBottom="@+id/editTextEmail"
        android:layout_marginLeft="46sp"
        android:src="@drawable/user_32px" />

    <ImageView
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:id="@+id/imageView4"
        android:src="@drawable/lock_32px"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        android:gravity="center"
        android:hint="Username"
        android:importantForAutofill="no"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:textColorHint="@color/white"
        android:layout_marginStart="70dp"
        app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="-1dp"
            android:background="@null"
            android:gravity="center"
            android:hint="Password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="330sp"
        android:layout_height="50sp"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/button_back"
         android:text="Login"
        android:textColor="#bfdfdf"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:onClick="goToRegister"
        android:text="Haven&apos;t signed up yet? Register now. "
        android:textColor="#FFFFFF"
        android:textSize="22sp" />


</RelativeLayout>
