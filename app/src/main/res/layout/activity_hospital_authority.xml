<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D1567"
        tools:context=".LoginSignup.HospitalAuthority">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:text="Registration For Hospital Authority"
            android:textAlignment="center"
            android:textColor="#bfdfdf"
            android:textSize="20dp" />

        <View
            android:id="@+id/view1"
            android:layout_width="300sp"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65sp"
            android:background="#495669" />

        <View
            android:layout_width="300sp"
            android:layout_height="1px"
            android:background="#495669"
            android:id="@+id/view2"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <View
            android:layout_width="300sp"
            android:layout_height="1px"
            android:background="#495669"
            android:id="@+id/view3"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignBottom="@+id/textViewTitle"
            android:layout_marginBottom="-279dp"
            android:background="@color/background"
            android:src="@drawable/password" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="58dp"
            android:background="@color/white"
            android:src="@drawable/lock_32px" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginTop="130dp">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="224dp">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="127dp">

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/locationdetails"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="-131dp"
            android:text="latitude longitude " />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="309dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button_back"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:onClick="register"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPassword"
            android:layout_width="254dp"
            android:layout_height="61dp"
            android:layout_below="@+id/editTextEmail"
            android:layout_marginStart="90dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="51dp"
            android:background="@color/background"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#898A83"
            android:textColorHint="#898A83" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="168dp"
            android:layout_toEndOf="@+id/imageView4"
            android:background="@color/background"
            android:gravity="center"
            android:hint="Username"
            android:importantForAutofill="no"
            android:inputType="textAutoComplete"
            android:textColor="#0A0A0A"
            android:textColorHint="#898A83" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hospital"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_alignTop="@+id/btnRegister"
            android:layout_marginTop="-57dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="225dp"
            android:background="@color/background"
            android:drawableLeft="@drawable/ic_baseline_edit_location_24"
            android:hint="Hospital address:- "
            android:importantForAutofill="no"
            android:textColor="#171212"
            android:textColorHint="#898A83" />

    </RelativeLayout>
</ScrollView>
